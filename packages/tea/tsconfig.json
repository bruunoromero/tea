{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES3",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "declaration": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
